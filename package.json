{
  "private": false,
  "name": "@mblabs/docs-python",
  "version": "0.0.1",
  "description": "Documentation partials used to generate documentation for Python projects",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/docs-python.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/documentation/python/-/issues"
  },
  "type": "module",
  "scripts": {
    "help": "task --list",
    "prepare": "task common:husky",
    "start": "bash .config/start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@mblabs/eslint-config": "^1.0.0",
    "@mblabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "handlebars-helpers": "^0.10.0"
  },
  "keywords": [
    "cli",
    "common",
    "docs",
    "documentation",
    "megabytelabs",
    "npm",
    "package",
    "partials",
    "professormanhattan",
    "pypi",
    "python",
    "shared"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Documentation partials used to generate documentation for Python projects",
    "docs": {
      "link": "https://megabyte.space/docs/documentation/python"
    },
    "group": "documentation",
    "name": "Python Documentation",
    "overview": "This repository contains documentation partials used to generate documentation for Python projects. It uses the partials in conjunction with customizable variables to generate unique documentation. It also allows us to use custom formats based on the type of Python project. When this project is updated, the changes are propagated to the [Python common files repository](https://gitlab.com/megabyte-labs/common/python). From there, common files and documentation are propagated to individual Python projects. By doing this, we are able to keep documentation, configurations, and common files up-to-date from a central location.",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/docs-python",
      "gitlab": "https://gitlab.com/megabyte-labs/documentation/python"
    },
    "slug": "docs-python",
    "subgroup": "python",
    "title": "Python Project Documentation Partials"
  },
  "eslintConfig": {
    "extends": "@mblabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@mblabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
